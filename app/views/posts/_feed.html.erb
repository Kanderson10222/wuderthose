<% if user_signed_in? %>
<div class="postform">
<%= render 'posts/form' %>
</div>
<table>
<br>
  <tbody class="user-block">
    <br>
<% @posts.each do |post| %>
  <tr>

    <p class="postby">By:<%=link_to post.user.username, user_path(post.user)%> </p>
    <p class="thepost"><%= post.post %> <%=link_to image_tag(post.avatar.url), post %>
    </p>
    <% if current_user && @post.user_id == current_user.id %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<% end %>

</tbody>
</table>
<br>
<% end %>
