<% if user_signed_in? %>
<%= render 'posts/form' %>

<table>
<br>
  <tbody class="user-block">
    <br>
<% @posts.each do |post| %>
  <tr>

    <p class="postby">By:<%= post.user.username %> </p>
    <p class="thepost"><%= post.post %>
      <button><%= link_to 'Show', post %></button>
    </p>
    <% if current_user && @post.user_id == current_user.id %>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
<% end %>

