<!DOCTYPE html>
<html>
  <head>
    <title>KickzBlogg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- <script src="jquery.flickr.js" type="text/javascript"></script> -->
    <script type="text/javascript">
        $(document).ready(function() {
          var config = {
            api_key: 'e11acbbd6ab5d18206c964517f6197a5',
            link_to_size: 'm'
          }

          $('#recent').flickr(config).photosGetRecent({
            per_page: 10
          })
          $('#contacts').flickr(config).photosGetContactsPublicPhotos({
            user_id: '140117506@N02',
            count: 15
          })
          $('#search').flickr(config).photosSearch({
            text: 'jordans sneakers',
            per_page: 5
          })
          $('#portfolio').flickr(config).photosSearch({
            user_id: '95448703@N00',
            per_page: 15,
            tags: 'portfolio'
          })
          $('#photoset').flickr(config).photosetsGetPhotos({
            photoset_id: '72157634072148891',
            per_page: 16
          })
        })
      </script>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>
      <% if flash[:alert] %>
      <div class="notification">
       <p class="alert"><%= alert %></p>
     </div>
    <% end %>

    <nav class="navbar">
      <%= link_to root_path, class: "navi" do %>
      <h1 class="title">üëáüèæ Wuder Those üëÄ</h1>
      <% end %>

      <% if user_signed_in? %>

      <p class="newone">
        <%= link_to 'Kickz of the Day', new_post_path, class: "postie" %>
      </p>
      <div class="Profile">
        <%= link_to "Profile", user_path(current_user) %>
      </div>
      <div class="Fellow-Sneakerheads">
        <%= link_to "Fellow SneakerHeads", users_path %>
      </div>
      <div class="edit-info">
        <%= link_to "edit info", edit_user_registration_path(current_user) %>
      </div>
      <div class="signOut">
        <%= link_to 'sign-out', destroy_user_session_path, method: :delete %>
      </div>
      <div class="individual"><strong>Hi <%= current_user.username %>!<%=image_tag current_user.avatar.url %></strong></div>
      <% else %>
      <div class="signin">
        <%= link_to "Sign-in", new_user_session_path %>
      </div>
      <div class="signup">
      <%= link_to "Sign-up", new_user_registration_path %>
      </div>


      <% end %>
      <p class="searchbox">
          <input type="text" name="" id=''>
          <button type="submit" name="" id=''>Search</button>
        </p>
        <div id="search"></div>
    </nav>
    <%= yield %>
  </body>
  <footer>Wuder Those üëÄ | Kobi 2018 ¬©Ô∏è </footer>
</html>
