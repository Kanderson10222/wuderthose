<!DOCTYPE html>
<html>
  <head>
    <title>KickzBlogg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  <link href="https://fonts.googleapis.com/css?family=Permanent+Marker" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>
      <% if flash[:alert] %>
      <div class="notification">
       <p class="alert"><%= alert %></p>
     </div>
    <% end %>

    <nav class="navbar">
      <%= link_to root_path, class: "navi" do %>
      <h1 class="title">👇🏾 Wuder Those 👀</h1>
      <% end %>

      <% if user_signed_in? %>

      <p class="newone">
        <%= link_to 'New Post', new_post_path, class: "postie" %>
      </p>
      <div class="">
        <%= link_to "Profile", user_path(current_user) %>
      </div>
      <div class="">
        <%= link_to "Fellow SneakerHeads", users_path %>
      </div>
      <div class="">
        <%= link_to "edit info", edit_user_registration_path(current_user) %>
      </div>
      <div class="signOut">
        <%= link_to 'sign-out', destroy_user_session_path, method: :delete %>
      </div>
      <div class="individual"><strong>Hi <%= current_user.username %>!</strong></div>
      <% else %>
      <div class="signin">
        <%= link_to "Sign-in", new_user_session_path %>
      </div>
      <div class="signup">
      <%= link_to "Sign-up", new_user_registration_path %>
      </div>


      <% end %>
    </nav>

    <%= yield %>
  </body>
  <footer>Wuder Those 👀 | Kobi 2018 ©️ </footer>
</html>
