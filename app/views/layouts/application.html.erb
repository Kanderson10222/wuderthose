<!DOCTYPE html>
<html>
  <head>
    <title>Blogg</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification">
      <p class="notice"><%= notice %></p>
    </div>
    <% end %>
      <% if flash[:alert] %>
      <div class="notification">
       <p class="alert"><%= alert %></p>
     </div>
    <% end %>

    <nav class="navbar">
      <%= link_to root_path, class: "navi" do %>
      <h1 class="title">Kickz Blog</h1>
      <% end %>

      <% if user_signed_in? %>

      <p class="newone">
        <%= link_to 'New Post', new_post_path, class: "postie" %>
      </p>
      <div class="">
        <%= link_to "edit info", edit_user_registration_path %>
      </div>
      <div class="signOut">
        <%= link_to 'sign-out', destroy_user_session_path, method: :delete %>
      </div>
      <div class="indi"><strong>Hi <%= current_user.username %>!</strong></div>
      <% else %>
      <div class="">
        <%= link_to "Sign-in", new_user_session_path %>
      </div>
      <div class="">
      <%= link_to "Sign-up", new_user_registration_path %>
      </div>


      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
